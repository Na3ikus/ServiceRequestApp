@inject ILocalizationService L
@inject IThemeService Theme
@inject IAuthService AuthService
@implements IDisposable

<!-- Created by Nazar "N1h3" Hutsol -->
<nav class="bg-gradient-to-b from-slate-800 to-slate-900 dark:from-gray-900 dark:to-black text-white h-full flex flex-col transition-colors duration-200">
    <div class="p-5 border-b border-slate-700/50">
        <a href="" class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
            </div>
            <span class="text-xl font-bold bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
                @L.Translate("nav.serviceDesk")
            </span>
        </a>
    </div>

    <div class="flex-1 py-6 px-3">
        <ul class="space-y-2">
            <li>
                <NavLink href="" Match="NavLinkMatch.All"
                         class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 rounded-xl transition-all duration-200 group"
                         ActiveClass="!bg-gradient-to-r !from-blue-600 !to-blue-700 !text-white shadow-lg shadow-blue-500/25">
                    <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                    </svg>
                    <span class="font-medium">@L.Translate("nav.allTickets")</span>
                </NavLink>
            </li>
            @if (AuthService.CurrentUser?.Role == "User")
            {
                <li>
                    <NavLink href="my-tickets"
                             class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 rounded-xl transition-all duration-200 group"
                             ActiveClass="!bg-gradient-to-r !from-blue-600 !to-blue-700 !text-white shadow-lg shadow-blue-500/25">
                        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span class="font-medium">@L.Translate("nav.myTickets")</span>
                    </NavLink>
                </li>
            }
            @if (AuthService.CurrentUser?.Role == "Developer")
            {
                <li>
                    <NavLink href="developer"
                             class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 rounded-xl transition-all duration-200 group"
                             ActiveClass="!bg-gradient-to-r !from-blue-600 !to-blue-700 !text-white shadow-lg shadow-blue-500/25">
                        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                        </svg>
                        <span class="font-medium">@L.Translate("nav.developer")</span>
                    </NavLink>
                </li>
            }
            @if (AuthService.CurrentUser?.Role == "Admin")
            {
                <li>
                    <NavLink href="admin"
                             class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 rounded-xl transition-all duration-200 group"
                             ActiveClass="!bg-gradient-to-r !from-blue-600 !to-blue-700 !text-white shadow-lg shadow-blue-500/25">
                        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span class="font-medium">@L.Translate("nav.admin")</span>
                    </NavLink>
                </li>
            }
        </ul>
    </div>

    <div class="p-4 border-t border-slate-700/50">
        <div class="text-xs text-slate-500 text-center">
            @L.Translate("common.footer")
        </div>
    </div>
</nav>

@code {
    protected override void OnInitialized()
    {
        L.LanguageChanged += OnStateChanged;
        Theme.ThemeChanged += OnStateChanged;
    }

    private void OnStateChanged(object? sender, EventArgs e) => InvokeAsync(StateHasChanged);

    public void Dispose()
    {
        L.LanguageChanged -= OnStateChanged;
        Theme.ThemeChanged -= OnStateChanged;
    }
}


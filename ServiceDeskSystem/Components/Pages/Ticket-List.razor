@page "/"
@using ServiceDeskSystem.Data.Entities
@using ServiceDeskSystem.Services
@inject ITicketService TicketService
@inject ILocalizationService L
@inject IThemeService Theme
@inject NavigationManager Navigation
@rendermode InteractiveServer
@implements IDisposable

<!-- Created by Nazar "N1h3" Hutsol -->
<div class="max-w-7xl mx-auto p-6">
<DashboardStats />

<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white">@L.Translate("tickets.title")</h1>
        <p class="text-gray-600 dark:text-gray-400">@L.Translate("tickets.subtitle")</p>
    </div>
    <a href="create-ticket"
       class="new-ticket-btn px-5 py-2.5 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all shadow-lg shadow-blue-500/25 flex items-center gap-2 font-medium">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        @L.Translate("nav.newTicket")
    </a>
</div>

@if (tickets is null)
{
    <div class="flex items-center justify-center h-64">
        <div class="flex items-center gap-3 text-gray-500 dark:text-gray-400">
            <svg class="animate-spin h-6 w-6" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-lg">@L.Translate("tickets.loading")</span>
        </div>
    </div>
}
else if (!tickets.Any())
{
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-12 text-center">
        <div class="w-20 h-20 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-700 dark:text-white mb-2">@L.Translate("tickets.noTickets")</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-6">@L.Translate("tickets.createFirst")</p>
        <a href="create-ticket" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all shadow-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            @L.Translate("tickets.createTicket")
        </a>
    </div>
}
    else
    {
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden">
            <div class="overflow-x-auto">
                <table class="ticket-table">
                    <thead class="bg-gray-50 dark:bg-gray-700/50 border-b border-gray-200 dark:border-gray-700">
                        <tr>
                            <th class="col-id px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">@L.Translate("table.id")</th>
                            <th class="col-title px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">@L.Translate("table.title")</th>
                            <th class="col-status px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">@L.Translate("table.status")</th>
                            <th class="col-priority px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">@L.Translate("table.priority")</th>
                            <th class="col-product px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">@L.Translate("table.product")</th>
                            <th class="col-author px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">@L.Translate("table.author")</th>
                            <th class="col-created px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">@L.Translate("table.created")</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var ticket in tickets)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 cursor-pointer transition-colors" @onclick="@(() => ViewTicket(ticket.Id))">
                                <td class="col-id px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400 font-mono">#@ticket.Id</td>
                                <td class="col-title px-6 py-4">
                                    <div class="ticket-title text-sm font-medium text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400">@ticket.Title</div>
                                </td>
                                <td class="col-status px-6 py-4 whitespace-nowrap">
                                    <span class="ticket-status-badge @GetStatusBadgeClass(ticket.Status) px-3 py-1 rounded-full text-xs font-semibold">
                                        @GetStatusText(ticket.Status)
                                    </span>
                                </td>
                                <td class="col-priority px-6 py-4 whitespace-nowrap">
                                    <span class="ticket-priority-badge @GetPriorityBadgeClass(ticket.Priority) px-3 py-1 rounded-lg text-xs font-semibold">
                                        @GetPriorityText(ticket.Priority)
                                    </span>
                                </td>
                                <td class="col-product px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@ticket.Product?.Name</td>
                                <td class="col-author px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@ticket.Author?.Login</td>
                                <td class="col-created px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@ticket.CreatedAt.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<Ticket>? tickets;

    protected override async Task OnInitializedAsync()
    {
        L.LanguageChanged += OnStateChanged;
        Theme.ThemeChanged += OnStateChanged;
        tickets = await TicketService.GetAllTicketsAsync();
    }

    private void OnStateChanged(object? sender, EventArgs e) => StateHasChanged();

    private void ViewTicket(int id) => Navigation.NavigateTo($"/ticket/{id}");

    private string GetStatusText(string status) => status switch
    {
        "Open" => L.Translate("status.open"),
        "In Progress" => L.Translate("status.inProgress"),
        "Resolved" => L.Translate("status.resolved"),
        "Closed" => L.Translate("status.closed"),
        _ => status,
    };

    private string GetPriorityText(string priority) => priority switch
    {
        "Low" => L.Translate("priority.low"),
        "Medium" => L.Translate("priority.medium"),
        "High" => L.Translate("priority.high"),
        "Critical" => L.Translate("priority.critical"),
        _ => priority,
    };

    private static string GetStatusBadgeClass(string status) => status switch
    {
        "Open" => "bg-blue-100 text-blue-800 dark:bg-blue-900/50 dark:text-blue-300",
        "In Progress" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/50 dark:text-yellow-300",
        "Resolved" => "bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-300",
        "Closed" => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
        _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
    };

    private static string GetPriorityBadgeClass(string priority) => priority switch
    {
        "Critical" => "bg-red-100 text-red-800 dark:bg-red-900/50 dark:text-red-300",
        "High" => "bg-orange-100 text-orange-800 dark:bg-orange-900/50 dark:text-orange-300",
        "Medium" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/50 dark:text-yellow-300",
        "Low" => "bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-300",
        _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
    };

    public void Dispose()
    {
        L.LanguageChanged -= OnStateChanged;
        Theme.ThemeChanged -= OnStateChanged;
    }
}

@page "/ticket/{Id:int}"
@using ServiceDeskSystem.Components.Common
@inherits BaseComponent
@rendermode InteractiveServer

<!-- Created by Nazar "N1h3" Hutsol -->
<div class="max-w-6xl mx-auto p-6">
    @if (Ticket is null)
    {
        <div class="flex items-center justify-center h-64">
            <div class="text-gray-500 text-lg">Loading ticket...</div>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Ticket Header -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <div class="mb-4">
                        <div class="flex items-start justify-between gap-4">
                            <h1 class="text-2xl font-bold text-gray-800 dark:text-white flex-1 min-w-0">@Ticket.Title</h1>
                            <div class="flex items-center gap-2 flex-shrink-0">
                                <span class="@GetStatusBadgeClass(Ticket.Status) px-3 py-1 rounded-full text-sm font-medium whitespace-nowrap">
                                    @Ticket.Status
                                </span>
                                @if (CanManageTicket)
                                {
                                    <button @onclick="DeleteTicketAsync" class="ticket-delete-btn" type="button">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                        <span>@L.Translate("details.deleteTicket")</span>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-400 mb-4">
                        <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            @Ticket.Author?.Login
                        </span>
                        <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            @Ticket.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                        </span>
                        <span class="ticket-priority-badge @GetPriorityBadgeClass(Ticket.Priority) px-2 py-0.5 rounded text-xs font-medium">
                            @Ticket.Priority
                        </span>
                    </div>

                    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                        <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Description</h3>
                        <p class="text-gray-600 dark:text-gray-400 whitespace-pre-wrap">@Ticket.Description</p>
                    </div>
                </div>

                <!-- Comments Section -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                        <h2 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">
                            Comments (@(Ticket.Comments?.Count ?? 0))
                    </h2>

                    <div class="space-y-4 mb-6">
                        @if (Ticket.Comments is not null && Ticket.Comments.Any())
                        {
                            @foreach (var comment in Ticket.Comments.OrderBy(c => c.CreatedAt))
                            {
                                <div class="border-l-4 border-blue-500 dark:border-blue-400 pl-4 py-2">
                                    <div class="flex items-center gap-2 mb-1">
                                        <span class="font-medium text-gray-800 dark:text-white">@comment.Author?.Login</span>
                                        <span class="text-xs text-gray-500 dark:text-gray-400">@comment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                            @if (CanEditComment(comment))
                                            {
                                                <div class="ml-auto flex gap-2 text-xs">
                                                    @if (EditingCommentId == comment.Id)
                                                    {
                                                        <button class="text-green-600 dark:text-green-400 hover:underline" @onclick="() => SaveCommentEditAsync(comment.Id)">Save</button>
                                                        <button class="text-gray-500 dark:text-gray-400 hover:underline" @onclick="CancelEdit">Cancel</button>
                                                    }
                                                    else
                                                    {
                                                        <button class="text-blue-600 dark:text-blue-400 hover:underline" @onclick="() => BeginEdit(comment)">Edit</button>
                                                    }
                                                </div>
                                            }
                                    </div>
                                        @if (EditingCommentId == comment.Id)
                                        {
                                            <textarea @bind="EditingCommentMessage"
                                                      @bind:event="oninput"
                                                      rows="3"
                                                      class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none bg-white dark:bg-gray-700 text-gray-900 dark:text-white"></textarea>
                                        }
                                        else
                                        {
                                            <p class="text-gray-600 dark:text-gray-400">@comment.Message</p>
                                        }
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-gray-500 dark:text-gray-400 italic">No comments yet.</p>
                        }
                    </div>

                    <!-- Add Comment Form -->
                    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                        <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Add a Comment</h3>
                        <textarea @bind="NewCommentMessage"
                                  @bind:event="oninput"
                                  rows="3" 
                                  placeholder="Write your comment..."
                                  class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500"></textarea>
                        <div class="flex justify-end mt-2">
                            <button @onclick="AddCommentAsync" 
                                    disabled="@(string.IsNullOrWhiteSpace(NewCommentMessage) || IsSubmitting)"
                                    class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:bg-gray-400 disabled:cursor-not-allowed transition-colors">
                                @if (IsSubmitting)
                                {
                                    <span>Sending...</span>
                                }
                                else
                                {
                                    <span>Send Comment</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Ticket Info -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">Details</h3>
                    <dl class="space-y-3">
                        <div>
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Product</dt>
                            <dd class="text-gray-800 dark:text-white">@Ticket.Product?.Name</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Priority</dt>
                            <dd>
                        <span class="ticket-priority-badge @GetPriorityBadgeClass(Ticket.Priority) px-2 py-0.5 rounded text-xs font-medium">
                                    @Ticket.Priority
                                </span>
                            </dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Ticket ID</dt>
                            <dd class="text-gray-800 dark:text-white">#@Ticket.Id</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">@L.Translate("details.assignedTo")</dt>
                            <dd class="text-gray-800 dark:text-white">
                                @if (Ticket.Developer is not null)
                                {
                                    <span class="flex items-center gap-1.5 text-green-600 dark:text-green-400">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                        @Ticket.Developer.Login
                                    </span>
                                }
                                else
                                {
                                    <span class="text-gray-400 dark:text-gray-500 italic">@L.Translate("table.unassigned")</span>
                                }
                            </dd>
                        </div>
                    </dl>
                </div>

                <!-- Assign/Unassign Actions -->
                @if (CanTakeTicket || CanReleaseTicket)
                {
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">@L.Translate("details.assignment")</h3>
                        <div class="space-y-2">
                            @if (CanTakeTicket)
                            {
                                <button @onclick="AssignToMeAsync" 
                                        class="w-full px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all shadow-lg flex items-center justify-center gap-2">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                                    </svg>
                                    @L.Translate("details.takeTicket")
                                </button>
                            }
                            @if (CanReleaseTicket)
                            {
                                <button @onclick="UnassignAsync" 
                                        class="w-full px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-colors flex items-center justify-center gap-2">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7a4 4 0 11-8 0 4 4 0 018 0zM9 14a6 6 0 00-6 6v1h12v-1a6 6 0 00-6-6zM21 12h-6"></path>
                                    </svg>
                                    @L.Translate("details.releaseTicket")
                                </button>
                            }
                        </div>
                    </div>
                }

                <!-- Actions -->
                @if (CanManageTicketStatus)
                {
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">Actions</h3>
                        <div class="space-y-2">
                            @if (Ticket.Status == "Open")
                            {
                                <button @onclick="@(() => UpdateStatusAsync("In Progress"))" 
                                        class="w-full px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors">
                                    Start Progress
                                </button>
                            }
                            @if (Ticket.Status == "In Progress")
                            {
                                <button @onclick="@(() => UpdateStatusAsync("Resolved"))" 
                                        class="w-full px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors">
                                    Mark Resolved
                                </button>
                            }
                            @if (Ticket.Status != "Closed")
                            {
                                <button @onclick="@(() => UpdateStatusAsync("Closed"))" 
                                        class="w-full px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors">
                                    Close Ticket
                                </button>
                            }
                            @if (Ticket.Status == "Closed")
                            {
                                <button @onclick="@(() => UpdateStatusAsync("Open"))" 
                                        class="w-full px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
                                    Reopen Ticket
                                </button>
                            }
                        </div>
                    </div>
                }

                <!-- Navigation -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <button @onclick="GoBack" 
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                        ‚Üê Back to Tickets
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@page "/"
@using ServiceDeskSystem.Components.Common
@inherits BaseComponent
@rendermode InteractiveServer

<!-- Created by Nazar "N1h3" Hutsol -->
<div class="max-w-7xl mx-auto p-6">
<DashboardStats />

<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white">@L.Translate("tickets.title")</h1>
        <p class="text-gray-600 dark:text-gray-400">@L.Translate("tickets.subtitle")</p>
    </div>
    <a href="create-ticket"
       class="new-ticket-btn px-5 py-2.5 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all shadow-lg shadow-blue-500/25 flex items-center gap-2 font-medium">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        @L.Translate("nav.newTicket")
    </a>
</div>

<!-- Filters Section -->
<div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-4 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Search -->
        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">@L.Translate("tickets.search")</label>
            <input type="text"
                   @bind-value="searchQuery"
                   @bind-value:event="oninput"
                   placeholder="@L.Translate("tickets.searchPlaceholder")"
                   class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500">
        </div>
        
        <!-- Priority Filter -->
        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">@L.Translate("tickets.priority")</label>
            <select @onchange="OnPriorityChanged"
                    value="@selectedPriority"
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                <option value="All">@L.Translate("tickets.allPriorities")</option>
                <option value="Low">@L.Translate("priority.low")</option>
                <option value="Medium">@L.Translate("priority.medium")</option>
                <option value="High">@L.Translate("priority.high")</option>
                <option value="Critical">@L.Translate("priority.critical")</option>
            </select>
        </div>
        
        <!-- Status Filter -->
        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">@L.Translate("tickets.status")</label>
            <select @onchange="OnStatusChanged"
                    value="@selectedStatus"
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                <option value="All">@L.Translate("tickets.allStatuses")</option>
                <option value="Open">@L.Translate("status.open")</option>
                <option value="In Progress">@L.Translate("status.inProgress")</option>
                <option value="Open/InProgress">@L.Translate("tickets.openOrInProgress")</option>
                <option value="Resolved">@L.Translate("status.resolved")</option>
                <option value="Closed">@L.Translate("status.closed")</option>
                <option value="Closed/Resolved">@L.Translate("tickets.closedOrResolved")</option>
            </select>
        </div>
    </div>
</div>

@if (filteredTickets is null)
{
    <div class="flex items-center justify-center h-64">
        <div class="flex items-center gap-3 text-gray-500 dark:text-gray-400">
            <svg class="animate-spin h-6 w-6" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-lg">@L.Translate("tickets.loading")</span>
        </div>
    </div>
}
else if (!filteredTickets.Any())
{
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-12 text-center">
        <div class="w-20 h-20 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-700 dark:text-white mb-2">@L.Translate("tickets.noTickets")</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-6">@L.Translate("tickets.createFirst")</p>
        <a href="create-ticket" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all shadow-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            @L.Translate("tickets.createTicket")
        </a>
    </div>
}
    else
    {
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden">
            <div class="overflow-x-auto">
                <table class="ticket-table">
                    <thead class="bg-gray-50 dark:bg-gray-700/50 border-b border-gray-200 dark:border-gray-700">
                        <tr>
                            <th class="col-id px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-200 uppercase tracking-wider">@L.Translate("table.id")</th>
                            <th class="col-title px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-200 uppercase tracking-wider">@L.Translate("table.title")</th>
                            <th class="col-status px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-200 uppercase tracking-wider">@L.Translate("table.status")</th>
                            <th class="col-priority px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-200 uppercase tracking-wider">@L.Translate("table.priority")</th>
                            <th class="col-product px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-200 uppercase tracking-wider">@L.Translate("table.product")</th>
                            <th class="col-author px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-200 uppercase tracking-wider">@L.Translate("table.author")</th>
                            <th class="col-assignee px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-200 uppercase tracking-wider">@L.Translate("table.assignee")</th>
                            <th class="col-created px-6 py-4 text-left text-xs font-semibold text-gray-500 dark:text-gray-200 uppercase tracking-wider">@L.Translate("table.created")</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var ticket in filteredTickets)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 cursor-pointer transition-colors" @onclick="@(() => ViewTicket(ticket.Id))">
                                <td class="col-id px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200 font-mono">#@ticket.Id</td>
                                <td class="col-title px-6 py-4">
                                    <div class="ticket-title text-sm font-medium text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 truncate max-w-xs">@ticket.Title</div>
                                </td>
                                <td class="col-status px-6 py-4 whitespace-nowrap">
                                    <span class="ticket-status-badge @GetStatusBadgeClass(ticket.Status) px-3 py-1 rounded-full text-xs font-semibold">
                                        @GetStatusText(ticket.Status)
                                    </span>
                                </td>
                                <td class="col-priority px-6 py-4 whitespace-nowrap">
                                    <span class="ticket-priority-badge @GetPriorityBadgeClass(ticket.Priority) px-3 py-1 rounded-lg text-xs font-semibold">
                                        @GetPriorityText(ticket.Priority)
                                    </span>
                                </td>
                                <td class="col-product px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200 truncate max-w-[120px]">@ticket.Product?.Name</td>
                                <td class="col-author px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200 truncate max-w-[100px]">@ticket.Author?.Login</td>
                                <td class="col-assignee px-6 py-4 whitespace-nowrap text-sm">
                                @if (ticket.Developer is not null)
                                {
                                    <span class="flex items-center gap-1.5 text-green-600 dark:text-green-400">
                                        <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                        @ticket.Developer.Login
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400 dark:text-gray-500 italic">@L.Translate("table.unassigned")</span>
                                    }
                                </td>
                                <td class="col-created px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200">@ticket.CreatedAt.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

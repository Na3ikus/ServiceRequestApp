@page "/admin"
@using ServiceDeskSystem.Data.Entities
@using ServiceDeskSystem.Services
@using ServiceDeskSystem.Services.Admin
@inject IAdminService AdminService
@inject IAuthService AuthService
@inject ILocalizationService L
@inject IThemeService Theme
@inject NavigationManager Navigation
@rendermode InteractiveServer
@implements IDisposable

<!-- Created by Nazar "N1h3" Hutsol -->
<div class="max-w-7xl mx-auto p-6">
    @if (AuthService.CurrentUser?.Role != "Admin")
    {
        <div class="bg-red-100 dark:bg-red-900/30 border border-red-400 dark:border-red-700 text-red-700 dark:text-red-400 px-6 py-4 rounded-xl">
            <div class="flex items-center gap-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <span class="font-medium">@L.Translate("admin.accessDenied")</span>
            </div>
        </div>
    }
    else
    {
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-800 dark:text-white">@L.Translate("admin.title")</h1>
            <p class="text-gray-600 dark:text-gray-400">@L.Translate("admin.subtitle")</p>
        </div>

        <!-- Tab Navigation -->
        <div class="flex gap-2 mb-6">
            <button @onclick="@(() => activeTab = "products")"
                    class="px-4 py-2 rounded-lg font-medium transition-colors @(activeTab == "products" ? "bg-blue-600 text-white" : "bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700")">
                @L.Translate("admin.products")
            </button>
            <button @onclick="@(() => activeTab = "techstacks")"
                    class="px-4 py-2 rounded-lg font-medium transition-colors @(activeTab == "techstacks" ? "bg-blue-600 text-white" : "bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700")">
                @L.Translate("admin.techStacks")
            </button>
        </div>

        @if (activeTab == "products")
        {
            <!-- Products Section -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 mb-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold text-gray-800 dark:text-white">@L.Translate("admin.products")</h2>
                    <button @onclick="ShowAddProduct"
                            class="px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        @L.Translate("admin.addProduct")
                    </button>
                </div>

                @if (products is null)
                {
                    <div class="text-gray-500 dark:text-gray-400">@L.Translate("common.loading")</div>
                }
                else
                {
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50 dark:bg-gray-700/50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">ID</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">@L.Translate("admin.name")</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">@L.Translate("admin.description")</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">@L.Translate("admin.version")</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">@L.Translate("admin.techStack")</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">@L.Translate("admin.actions")</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                @foreach (var product in products)
                                {
                                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                                        <td class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400 font-mono">@product.Id</td>
                                        <td class="px-4 py-3 text-sm font-medium text-gray-900 dark:text-white">@product.Name</td>
                                        <td class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400 max-w-xs truncate">@product.Description</td>
                                        <td class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400">@product.CurrentVersion</td>
                                        <td class="px-4 py-3 text-sm">
                                            <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400 rounded-md text-xs">
                                                @product.TechStack?.Name
                                            </span>
                                        </td>
                                        <td class="px-4 py-3">
                                            <div class="flex gap-2">
                                                <button @onclick="@(() => EditProduct(product))"
                                                        class="admin-edit-btn p-2 text-blue-600 dark:text-blue-400 hover:bg-blue-100 dark:hover:bg-blue-900/30 rounded-lg transition-colors">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                    </svg>
                                                </button>
                                                <button @onclick="@(() => DeleteProduct(product))"
                                                        class="admin-delete-btn p-2 text-red-600 dark:text-red-400 hover:bg-red-100 dark:hover:bg-red-900/30 rounded-lg transition-colors">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Tech Stacks Section -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold text-gray-800 dark:text-white">@L.Translate("admin.techStacks")</h2>
                    <button @onclick="ShowAddTechStack"
                            class="px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        @L.Translate("admin.addTechStack")
                    </button>
                </div>

                @if (techStacks is null)
                {
                    <div class="text-gray-500 dark:text-gray-400">@L.Translate("common.loading")</div>
                }
                else
                {
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50 dark:bg-gray-700/50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">ID</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">@L.Translate("admin.name")</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">@L.Translate("admin.type")</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">@L.Translate("admin.productsCount")</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">@L.Translate("admin.actions")</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                @foreach (var techStack in techStacks)
                                {
                                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                                        <td class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400 font-mono">@techStack.Id</td>
                                        <td class="px-4 py-3 text-sm font-medium text-gray-900 dark:text-white">@techStack.Name</td>
                                        <td class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400">@techStack.Type</td>
                                        <td class="px-4 py-3 text-sm">
                                            <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-md">
                                                @techStack.Products.Count
                                            </span>
                                        </td>
                                        <td class="px-4 py-3">
                                            <div class="flex gap-2">
                                                <button @onclick="@(() => EditTechStack(techStack))"
                                                        class="admin-edit-btn p-2 text-blue-600 dark:text-blue-400 hover:bg-blue-100 dark:hover:bg-blue-900/30 rounded-lg transition-colors">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                    </svg>
                                                </button>
                                                <button @onclick="@(() => DeleteTechStack(techStack))"
                                                        class="admin-delete-btn p-2 text-red-600 dark:text-red-400 hover:bg-red-100 dark:hover:bg-red-900/30 rounded-lg transition-colors @(techStack.Products.Count > 0 ? "opacity-50 cursor-not-allowed" : "")"
                                                        disabled="@(techStack.Products.Count > 0)">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        }
    }
</div>

<!-- Modal - moved outside for proper z-index layering -->
@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content animate-fade-in" @onclick:stopPropagation>
            <!-- Close button -->
            <button @onclick="CloseModal" 
                    class="absolute top-4 right-4 z-10 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>

            <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 pr-10">@modalTitle</h3>

                    @if (modalType == "product")
                    {
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L.Translate("admin.name")</label>
                                <input type="text" @bind="editingProduct.Name"
                                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L.Translate("admin.description")</label>
                                <textarea @bind="editingProduct.Description" rows="3"
                                          class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white resize-none"></textarea>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L.Translate("admin.version")</label>
                                <input type="text" @bind="editingProduct.CurrentVersion"
                                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L.Translate("admin.techStack")</label>
                                <select @bind="editingProduct.TechStackId"
                                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                                    @foreach (var ts in techStacks ?? [])
                                    {
                                        <option value="@ts.Id">@ts.Name (@ts.Type)</option>
                                    }
                                </select>
                            </div>
                        </div>
                    }
                    else if (modalType == "techstack")
                    {
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L.Translate("admin.name")</label>
                                <input type="text" @bind="editingTechStack.Name"
                                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">@L.Translate("admin.type")</label>
                                <input type="text" @bind="editingTechStack.Type"
                                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="mt-4 p-3 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 rounded-lg text-sm">
                            @errorMessage
                        </div>
                    }

                    <div class="flex justify-end gap-3 mt-6">
                        <button @onclick="CloseModal"
                                class="px-4 py-2 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors">
                            @L.Translate("admin.cancel")
                        </button>
                        <button @onclick="SaveModal"
                                class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                                disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span>@L.Translate("admin.saving")</span>
                            }
                            else
                            {
                                <span>@L.Translate("admin.save")</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        }
}

@code {
    private List<Product>? products;
    private List<TechStack>? techStacks;
    private string activeTab = "products";

    private bool showModal;
    private string modalTitle = "";
    private string modalType = "";
    private bool isEditing;
    private bool isSaving;
    private string? errorMessage;

    private Product editingProduct = new();
    private TechStack editingTechStack = new();

    protected override async Task OnInitializedAsync()
    {
        L.LanguageChanged += OnStateChanged;
        Theme.ThemeChanged += OnStateChanged;
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        techStacks = await AdminService.GetAllTechStacksAsync();
        products = await AdminService.GetAllProductsAsync();
    }

    private void OnStateChanged(object? sender, EventArgs e) => InvokeAsync(StateHasChanged);

    private void ShowAddProduct()
    {
        editingProduct = new Product { TechStackId = techStacks?.FirstOrDefault()?.Id ?? 0 };
        modalTitle = L.Translate("admin.addProduct");
        modalType = "product";
        isEditing = false;
        errorMessage = null;
        showModal = true;
    }

    private void EditProduct(Product product)
    {
        editingProduct = new Product
        {
            Id = product.Id,
            Name = product.Name,
            Description = product.Description,
            CurrentVersion = product.CurrentVersion,
            TechStackId = product.TechStackId
        };
        modalTitle = L.Translate("admin.editProduct");
        modalType = "product";
        isEditing = true;
        errorMessage = null;
        showModal = true;
    }

    private async Task DeleteProduct(Product product)
    {
        var success = await AdminService.DeleteProductAsync(product.Id);
        if (success)
        {
            await LoadDataAsync();
        }
    }

    private void ShowAddTechStack()
    {
        editingTechStack = new TechStack();
        modalTitle = L.Translate("admin.addTechStack");
        modalType = "techstack";
        isEditing = false;
        errorMessage = null;
        showModal = true;
    }

    private void EditTechStack(TechStack techStack)
    {
        editingTechStack = new TechStack
        {
            Id = techStack.Id,
            Name = techStack.Name,
            Type = techStack.Type
        };
        modalTitle = L.Translate("admin.editTechStack");
        modalType = "techstack";
        isEditing = true;
        errorMessage = null;
        showModal = true;
    }

    private async Task DeleteTechStack(TechStack techStack)
    {
        if (techStack.Products.Count > 0)
        {
            return;
        }

        var success = await AdminService.DeleteTechStackAsync(techStack.Id);
        if (success)
        {
            await LoadDataAsync();
        }
    }

    private void CloseModal()
    {
        showModal = false;
        errorMessage = null;
    }

    private async Task SaveModal()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            if (modalType == "product")
            {
                if (string.IsNullOrWhiteSpace(editingProduct.Name))
                {
                    errorMessage = L.Translate("admin.nameRequired");
                    return;
                }

                if (isEditing)
                {
                    await AdminService.UpdateProductAsync(editingProduct);
                }
                else
                {
                    await AdminService.CreateProductAsync(editingProduct);
                }
            }
            else if (modalType == "techstack")
            {
                if (string.IsNullOrWhiteSpace(editingTechStack.Name))
                {
                    errorMessage = L.Translate("admin.nameRequired");
                    return;
                }

                if (isEditing)
                {
                    await AdminService.UpdateTechStackAsync(editingTechStack);
                }
                else
                {
                    await AdminService.CreateTechStackAsync(editingTechStack);
                }
            }

            await LoadDataAsync();
            CloseModal();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    public void Dispose()
    {
        L.LanguageChanged -= OnStateChanged;
        Theme.ThemeChanged -= OnStateChanged;
    }
}

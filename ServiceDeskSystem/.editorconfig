# EditorConfig for ServiceDeskSystem
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
# CA2007: Consider calling ConfigureAwait on the awaited task
# Not needed in Blazor Server apps as they use SynchronizationContext
dotnet_diagnostic.CA2007.severity = none

# CA1515: Types can be made internal
# Blazor partial classes must be public for Razor compilation
dotnet_diagnostic.CA1515.severity = none

# SA1309: Field names should not begin with underscore
# Allow underscore prefix for private fields (common .NET convention)
dotnet_diagnostic.SA1309.severity = none

# SA1300: Element should begin with an uppercase letter
# Allow lowercase for private properties used in Razor binding
dotnet_diagnostic.SA1300.severity = suggestion

# SA1010: Opening square brackets should not be preceded by a space
# Allow 'new ()' syntax
dotnet_diagnostic.SA1010.severity = none

# CA1062: Validate arguments of public methods
# Suppress for migration files (auto-generated by EF Core)
dotnet_diagnostic.CA1062.severity = suggestion

[Migrations/*.cs]
# Migrations are auto-generated, suppress all style warnings
dotnet_diagnostic.CA1062.severity = none
generated_code = true

[*.razor]
indent_size = 4


[*.{json,xml,csproj}]
indent_size = 2

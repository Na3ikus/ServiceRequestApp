@namespace ServiceDeskSystem.Components.Common

<div class="toast-container">
    @foreach (var toast in Toasts)
    {
        <div @key="toast.Id" class="toast toast-@toast.Type.ToString().ToLower() @(toast.IsHiding ? "hiding" : "")">
            @switch (toast.Type)
            {
                case ToastType.Success:
                    <svg class="toast-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    break;
                case ToastType.Error:
                    <svg class="toast-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    break;
                case ToastType.Warning:
                    <svg class="toast-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                    break;
                default:
                    <svg class="toast-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    break;
            }
            <span class="toast-message">@toast.Message</span>
            <button @onclick="@(() => OnRemoveToast.InvokeAsync(toast))" class="toast-close">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public IReadOnlyList<ToastMessage> Toasts { get; set; } = [];

    [Parameter]
    public EventCallback<ToastMessage> OnRemoveToast { get; set; }
}
